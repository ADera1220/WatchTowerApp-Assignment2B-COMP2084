@model WatchTowerWebApp.Models.Show

@{
    ViewData["Title"] = "Add a new Show!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add a new Show!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalEpisode" class="control-label"></label>
                <input asp-for="TotalEpisode" class="form-control" />
                <span asp-validation-for="TotalEpisode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentEpisode" class="control-label"></label>
                <input asp-for="CurrentEpisode" class="form-control" />
                <span asp-validation-for="CurrentEpisode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextRelease" class="control-label"></label>
                <input asp-for="NextRelease" class="form-control" />
                <span asp-validation-for="NextRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CoWatcherId" class="control-label"></label>
                <select asp-for="CoWatcherId" class ="form-control" asp-items="ViewBag.CoWatcherId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
